  "scripts": {
    "dev": "electron-vite dev",
    "dev:prod": "cp .env .env.backup && cp .env.production .env && electron-vite dev; cp .env.backup .env && rm .env.backup",
    "build": "electron-vite build",
    "build:prod": "cp .env .env.backup && cp .env.production .env && electron-vite build; cp .env.backup .env && rm .env.backup",
    "preview": "electron-vite preview",
    "package": "electron-builder --dir",
    "package:mac": "electron-builder --mac",
    "package:mac:dev": "electron-builder --mac --config electron-builder.dev.yml",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "dist": "electron-builder",
    "dist:upload": "node scripts/upload-release.mjs",
    "claude:download": "node scripts/download-claude-binary.mjs",
    "claude:download:all": "node scripts/download-claude-binary.mjs --all",
    "whisper:download": "node scripts/download-whisper-binary.mjs",
    "whisper:download:all": "node scripts/download-whisper-binary.mjs --all",
    "release": "rm -rf release && bun i && bun run claude:download && bun run build:prod && bun run package:mac && ./scripts/upload-release-wrangler.sh",
    "release:dev": "rm -rf release && bun i && bun run claude:download && NODE_ENV=development bun run build && bun run package:mac:dev",
    "sync:public": "./scripts/sync-to-public.sh",
    "icon:generate": "node scripts/generate-icon.mjs",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "ts:check": "tsgo --noEmit",
    "lint": "oxlint -c oxlintrc.json src",
    "lint:fix": "oxlint -c oxlintrc.json --fix src",
    "lint:main": "oxlint -c oxlintrc.json --deny-warnings src/main",
    "lint:main:fix": "oxlint -c oxlintrc.json --fix src/main",
    "postinstall": "node scripts/postinstall.mjs"
  },
